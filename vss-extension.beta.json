{
    "manifestVersion": 1,
    "id": "git-merge-beta",
    "name": "Git Merge Beta",
    "version": "0.2.2",
    "publisher": "dtzar",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Test merges for conflicts between git branches OR actual merge commit and push of two git branches",
    "categories": [
        "Azure Pipelines"
    ],
    "tags": [
      "git",
      "git merge",
      "merge",
      "merge conflicts"
    ],
    "icons": {
        "default": "images/extension-icon.png"
    },
    "files": [
        {
            "path": "gitmerge"
        },
        {
            "path": "images", "addressable": true
        }
    ],
       "content": {
        "details": {
            "path": "readme.md"
        },
        "license": {
            "path": "LICENSE"
        }
    },
	"links": {
        "home": {
            "uri": "https://github.com/dtzar/vsts-gitmerge"
        },
        "getstarted": {
            "uri": "https://github.com/dtzar/vsts-gitmerge/blob/master/readme.md"
        },
        "learn": {
            "uri": "http://bit.ly/vstsgitmerge"
        },
        "support": {
            "uri": "https://github.com/dtzar/vsts-gitmerge/issues"
        },
        "repository": {
            "uri": "https://github.com/dtzar/vsts-gitmerge"
        },
        "issues": {
            "uri": "https://github.com/dtzar/vsts-gitmerge/issues"
        }
    },
    "branding": {
        "color": "rgb(0,111,196)",
        "theme": "dark"
    },
    "contributions": [
        {
            "id": "git-merge-beta-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "GitMerge",
                "iconAsset": "dtzar.git-merge-beta/images/extension-icon.png",
                "_sharedData": {
                    "assets": [
                        "dtzar.git-merge-beta/images/extension-icon.png"
                    ]
                }
            }
        }
    ]
}